<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.csulb.edu.tacoapp.MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/taco"
        android:id="@+id/imageView" />

    <TextView
        android:text="TACO PRONTO \n\n123 Euclid Ave\n Phone: 5556"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/imageView"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="SIZE"

        android:layout_width="150dp"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:id="@+id/textView2" />

    <TextView
        android:text="TORTILLA"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/radiogrp">
    <RadioButton
        android:text="Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/radioButton" />

    <RadioButton
        android:text="Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton"
        android:layout_alignLeft="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton"
        android:id="@+id/radioButton2" />
</RadioGroup>
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3"
    android:layout_toRightOf="@+id/imageView"
    android:layout_toEndOf="@+id/imageView"
    android:id="@+id/radiogrp2">
    <RadioButton
        android:text="Corn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/radioButton3" />

    <RadioButton
        android:text="Flour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton3"
        android:layout_alignLeft="@+id/radioButton3"
        android:layout_alignStart="@+id/radioButton3"
        android:id="@+id/radioButton4" />
</RadioGroup>

    <TextView
        android:text="FILLINGS"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="@drawable/back"
        android:layout_below="@+id/radiogrp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5" />

    <CheckBox
        android:text="Beef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/radiogrp"
        android:layout_alignStart="@+id/radiogrp"
        android:id="@+id/Beef"
        />

    <CheckBox
        android:text="Cheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Beef"

        android:layout_alignLeft="@+id/Beef"
        android:layout_alignStart="@+id/Beef"
        android:id="@+id/Cheese" />

    <CheckBox
        android:text="Chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Cheese"
        android:layout_alignLeft="@+id/Cheese"
        android:layout_alignStart="@+id/Cheese"
        android:id="@+id/Chicken" />

    <CheckBox
        android:text="Rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Beans"
        android:layout_alignLeft="@+id/Pico"
        android:layout_alignStart="@+id/Pico"
        android:id="@+id/Rice" />

    <CheckBox
        android:text="Guacamole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Guacamole"
        android:layout_toLeftOf="@+id/radiogrp2"
        android:layout_toStartOf="@+id/radiogrp2"
        android:layout_alignBottom="@+id/Pico"
        android:layout_below="@+id/textView5" />

    <CheckBox
        android:text="Sea food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sea_food"
        android:layout_below="@+id/Guacamole"
        android:layout_alignLeft="@+id/Guacamole"
        android:layout_alignStart="@+id/Guacamole" />


    <CheckBox
        android:text="Beans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Beans"
        android:layout_below="@+id/Sea_food"
        android:layout_alignLeft="@+id/Sea_food"
        android:layout_alignStart="@+id/Sea_food" />

    <CheckBox
        android:text="Pico de Gallo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pico"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text="BEVERAGE"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="@drawable/back"
        android:layout_marginTop="15dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/Chicken"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/Chicken"
        android:layout_alignStart="@+id/Chicken"
        android:id="@+id/Soda"
        android:text="Soda" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Soda"
        android:layout_alignLeft="@+id/Soda"
        android:layout_alignStart="@+id/Soda"
        android:id="@+id/Cerveza"
        android:text="Cerveza" />

    <CheckBox
        android:text="Margarita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/Beans"
        android:layout_toEndOf="@+id/Beans"
        android:id="@+id/Margarita" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Cerveza"
        android:layout_alignLeft="@+id/Margarita"
        android:layout_alignStart="@+id/Margarita"
        android:id="@+id/Tequila"
        android:text="Tequila" />

    <CheckBox
        android:text="LBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LBT"
        android:layout_below="@+id/Rice"
        android:layout_alignLeft="@+id/Rice"
        android:layout_alignStart="@+id/Rice" />

    <Button
        android:text="Place Your Order"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
